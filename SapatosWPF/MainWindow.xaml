<Window x:Class="SapatosWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SapatosWPF"
        mc:Ignorable="d"
        Title="Loja de Sapatos" Height="450" Width="800">

    <Grid>
        <Menu>
            <MenuItem Header="Arquivo">
                <MenuItem Header="Sair"/>
            </MenuItem>
            <MenuItem Header="Incluir">
                <MenuItem Header="Nova venda" x:Name="MenuNovaVenda" Click="MenuItem_Click_NovaVenda"></MenuItem>
                <MenuItem Header="Sapato"  x:Name="MenuNovoSapato"  Click="MenuItem_Click_Sapato"></MenuItem>
                <MenuItem Header="Cliente"  x:Name="MenuNovoCliente" Click="MenuItem_Click_Cliente"></MenuItem>
            </MenuItem>
            <MenuItem Header="Listar">
                <MenuItem Header="Estoque"  x:Name="MenuEstoque"  Click="MenuItem_Click_Estoque"></MenuItem>
               
            </MenuItem>
        </Menu>
    </Grid>


</Window>
    
    
        
